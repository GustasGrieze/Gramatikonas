@page "/rasybos/pasirinkimai/temos"
@inject NavigationManager NavigationManager

<h1>Rašybos užduotys pagal Temą</h1>

<div class="button-container">
    <button class="button" @onclick="@(() => NavigateToTask("Nosinės"))">Nosinės</button>
    <button class="button" @onclick="@(() => NavigateToTask("Žodžių rašyba, kartu ir atskirai"))">Žodžių rašyba, kartu ir atskirai</button>
    <button class="button" @onclick="@(() => NavigateToTask("Įrašyk praleistas raides"))">Įrašyk praleistas raides</button>
</div>

@code {
    private void NavigateToTask(string topic)
    {
        string encodedTopic = Uri.EscapeDataString(topic);
        NavigationManager.NavigateTo($"/rasybos/uzduotys?topic={encodedTopic}");
    }
}
