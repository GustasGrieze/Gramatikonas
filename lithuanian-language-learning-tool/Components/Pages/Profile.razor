@page "/profile"
@using lithuanian_language_learning_tool.Services
@using lithuanian_language_learning_tool.Models
@inject IUserService UserService
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Profile</PageTitle>

<CascadingAuthenticationState>
    <AuthorizeView>
        <Authorized>
            @if (_user != null)
            {
                <div class="container mx-auto p-4">
                    <div class="bg-white shadow rounded-lg p-6">
                        <div class="border rounded-lg p-4">
                            @if (!string.IsNullOrEmpty(_user.ProfilePictureUrl))
                            {
                                <img class="h-24 w-24 rounded-full" src="@_user.ProfilePictureUrl" alt="Profile picture" />
                            }
                            <div>
                                <h2 class="text-2xl font-bold">@_user.DisplayName @(@_user.Role == @UserRole.Admin ? "("+@_user.Role+")" : "" )</h2>
                                <p class="text-gray-600">@_user.Email</p>
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                            <div class="border rounded-lg p-4">
                                <h3 class="font-semibold mb-2">Learning Statistics</h3>
                                <p>High Score: @_user.HighScore</p>
                                <p>Lessons Completed: @_user.TotalLessonsCompleted</p>
                                <p>Current Streak: @_user.CurrentStreak days</p>
                                <p>Best Streak: @_user.BestStreak days</p>
                                <p>Accuracy Rate: @_user.AccuracyRate.ToString("F1")%</p>
                            </div>

                            <div class="border rounded-lg p-4">
                                <h3 class="font-semibold mb-2">Account Information</h3>
                                <p>Member since: @_user.CreatedAt.ToString("MMMM dd, yyyy")</p>
                                <p>Last login: @_user.LastLoginAt.ToString("MMMM dd, yyyy HH:mm")</p>
                                <p>Total study time: @FormatStudyTime(_user.TotalStudyTime)</p>
                            </div>
                        </div>

                        @if (_user.Achievements.Any())
                        {
                            <div class="border rounded-lg p-4">
                                <h3 class="font-semibold mb-2">Achievements (@_user.Achievements.Count)</h3>
                                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                                    @foreach (var achievement in _user.Achievements)
                                    {
                                        <div class="border rounded p-3">
                                            <h4 class="font-semibold">@achievement.Name</h4>
                                            <p class="text-sm text-gray-600">@achievement.Description</p>
                                            <p class="text-xs text-gray-500 mt-1">Unlocked: @achievement.UnlockedAt.ToString("MMM dd, yyyy")</p>
                                        </div>
                                    }
                                </div>
                            </div>
                        }

                        @if (_user.IsAdmin)
                        {
                            <div class="mt-6 border rounded-lg p-4 bg-gray-50">
                                <h3 class="font-semibold mb-2">Admin Panel</h3>
                                <p class="text-sm text-gray-600 mb-4">You have administrative privileges.</p>
                                <!-- Add admin-specific controls here -->
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <p>Loading...</p>
            }
        </Authorized>
        <NotAuthorized>
            <div class="text-center py-8">
                <h3 class="text-xl font-semibold mb-4">Welcome to Lithuanian Language Learning</h3>
                <p class="mb-4">Please sign in to access your profile and start learning.</p>
                <a href="login" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
                    Sign In
                </a>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>

@code {
    private User? _user;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        _user = await UserService.GetOrCreateUserFromGoogleAsync(authState);
    }

    private string FormatStudyTime(TimeSpan time)
    {
        if (time.TotalHours >= 1)
        {
            return $"{time.TotalHours:F1} hours";
        }
        return $"{time.TotalMinutes:F0} minutes";
    }
}