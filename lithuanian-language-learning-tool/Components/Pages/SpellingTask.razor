        <label>
            Lietuva yra graž
            <span>
                <select @bind="spellingTaskModel.SelectedLetter">
                    <option value="a">a</option>
                    <option value="b">b</option>
                    <option value="c">c</option>
                </select>
            </span> šalis su turtinga istorija ir kultūra...
        </label>
    </div>
    <button type="submit" class="button">Pateikti atsakymus</button>
</EditForm>

@code {
    private SpellingTaskModel spellingTaskModel = new SpellingTaskModel();

    private void SubmitSpellingTask()
    {
        // Handle form submission
        Console.WriteLine($"Selected Letter: {spellingTaskModel.SelectedLetter}");
    }

    public class SpellingTaskModel
